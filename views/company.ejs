<!DOCTYPE html>
<html>
    <head>
        <title>Companies</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/student.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    </head>
    <body>
        <h1>Companies</h1>
        <table class="table-primary table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                <% companies.forEach(function(company) { %>
                    <tr>
                        <td><a href="/companies/getCompany/<%= company._id %>"><%= company.name %></a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="parent-div">
            <form action="/companies/addCompany" method="POST">
                <label for="name">Company Name</label>
                <input type="text" name="name" id="name" required>
                <button type="submit">Add Company</button>
            </form>
        </div>
    </body>
</html>