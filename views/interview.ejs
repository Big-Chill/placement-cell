<!DOCTYPE html>
<html>
    <head>
        <title>Interviews</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/student.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    </head>
    <body>
        <h1>Interviews</h1>
       
        <table class="table-primary table table-bordered">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Company Name</th>
                    <th>Date</th>
                    <th>Result</th>
                </tr>
            </thead>

            <tbody>
                <% interviews.forEach(function(interview) { %>
                    <tr>
                        <td>
                            <a href="/students/getStudent/<%= interview.student._id %>">
                                <%= interview.student.name %>
                            </a>
                        </td>
                        <td>
                            <a href="/companies/getCompany/<%= interview.company._id %>">
                                <%= interview.company.name %>
                            </a>
                        </td>
                        <td><%= interview.date %></td>
                        <td><%= interview.result %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="parent-div">
            <form action="/interviews/addInterview" method="POST">
                <label for="company">Company</label>
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="company" id="company">
                    <% companies.forEach(function(company) { %>
                        <option value="<%= company._id %>"><%= company.name %></option>
                    <% }); %>
                </select>
                <label for="student">Student</label>
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="student" id="student">
                    <% students.forEach(function(student) { %>
                        <option value="<%= student._id %>"><%= student.name %></option>
                    <% }); %>
                </select>
                <label for="date">Date</label>
                <input type="date" name="date" id="date" class="form-control" required>
                <button type="submit">Add Interview</button>
            </form>
        </div>
    </body>
</html>